<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BossIndicator -->
    <declare-styleable name="BossIndicator">
        <attr name="boss_item_visible_count" format="integer" />
        <attr name="boss_text_color_normal" format="color" />
        <attr name="boss_text_color_hightlight" format="color" />
        <attr name="boss_text_size" format="dimension" />
        <attr name="boss_indicator_color" format="color" />
        <attr name="boss_indicator_src" format="reference" />
        <attr name="boss_indicator_style">
            <enum name="bitmap" value="0" />
            <enum name="line" value="1" />
            <enum name="square" value="2" />
            <enum name="triangle" value="3" />
        </attr>
    </declare-styleable>

</resources>